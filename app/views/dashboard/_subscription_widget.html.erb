<h4 class="header">
  <%= _("Content Host Subscription Status") %>
</h4>

<% organizations = Organization.current.present? ? [Organization.current] : User.current.allowed_organizations %>
<% owner_infos = organizations.map(&:owner_info) %>
<% invalid_consumer_count = owner_infos.map(&:total_invalid_compliance_consumers).reduce(:+) %>
<% partial_consumer_count = owner_infos.map(&:total_partial_compliance_consumers).reduce(:+) %>
<% valid_consumer_count = owner_infos.map(&:total_valid_compliance_consumers).reduce(:+) %>
<% total_count = owner_infos.map(&:total_consumers).reduce(:+) %>

<table class="table table-fixed table-striped table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to('/content_hosts?search=subscription_status=invalid') do %>
        <i class="label label-danger" style="margin-right: 6px">&nbsp;</i><%= _("Invalid") %></td>
      <% end %>
      <td style="text-align:right"><%= link_to('/content_hosts?search=subscription_status=invalid') do %>
        <%= invalid_consumer_count %></td>
      <% end %>
    </tr>
    <tr>
      <td><%= link_to('/content_hosts?search=subscription_status=partial') do %>
        <i class="label label-warning" style="margin-right: 6px">&nbsp;</i><%= _("Partial") %></td>
      <% end %>
      <td style="text-align:right"><%= link_to('/content_hosts?search=subscription_status=partial') do %>
        <%= partial_consumer_count %></td>
      <% end %>
    </tr>
    <tr>
      <td><%= link_to('/content_hosts?search=subscription_status=valid') do %>
        <i class="label label-success" style="margin-right: 6px">&nbsp;</i><%= _("Valid") %></td>
      <% end %>
      <td style="text-align:right"><%= link_to('/content_hosts?search=subscription_status=valid') do %>
        <%= valid_consumer_count %></td>
      <% end %>
    </tr>
    <tr>
      <td><h4>
          <%= link_to('/content_hosts') do %>
            <%= _("Total Content Hosts") %>
          <% end %>
      </h4></td>
      <td style="text-align:right;">
        <%= link_to('/content_hosts') do %> <%= total_count %> <% end %>
      </td>
    </tr>
  </tbody>
</table>
